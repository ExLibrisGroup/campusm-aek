{
  // I want to use babel-eslint for parsing!
  "parser": "babel-eslint",
  "env": {
    // I write for browser
    "browser": true,
    // in CommonJS
    "node": true
  },
  "plugins":[
    "react"
  ],
  "ecmaFeatures":{
    "jsx":true
  },
  // To give you an idea how to override rule options:
  "rules": {
    "quotes":"",
    "key-spacing":false,
    "comma-spacing":false,
    "no-trailing-spaces":false,
    "no-underscore-dangle":false,
    "react/jsx-no-undef":2,
    "strict":false
  }
}