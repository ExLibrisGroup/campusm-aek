.ui.input input.aek-show-placeholder
  min-height:unquote("calc(") (lineHeight + ((verticalPadding - lineHeightOffset)*2)) unquote(" + 2px)")

select, .ui.input select
  line-height:lineHeight
  z-index:1

// DateInput

.aek-native-date-input{
  position:relative;
  z-index:1;
  & + i.icon{
    z-index:2;
  }
  .ui.form &,& {
    input.aek-show-placeholder{
      background-color:transparent;
      color:transparent;
      &:focus{
        color:rgba(0,0,0,1);
        background-color:#fff;
      }
    }
  }
  .ui.input.left.corner.labeled + .aek-date-input-placeholder {
    padding-left:2.5em;
  }

  .ui.input + .ui.label.aek-valid-date-display{
    position:absolute;
    max-width:50%;
    right:0.45em;
    top:0.45em;
    font-weight:normal;

    .ui.right.icon &{
      right:3.2em;
    }

    opacity:0.4;

    &.focussed{
      opacity:1;
    }
  }

}

.aek-date-input-placeholder{
  display:block;
  background-color:white;
  right:0px;
  left:0px;
  top:0px;
  bottom:0px;
  box-sizing:border-box;
  position:absolute;
  vertical-align:middle;
  line-height:lineHeight;
  padding:padding;
  color:rgba(0, 0, 0, 0.4);
  z-index:-1;
  border:1px solid transparent;
  // min-height:2.9em;
  span {
    vertical-align:middle;
    // line-height:1.2em;
  }
  input:focus + & {
    display:none;
  }
}
