backgroundColor = #e7e7e7;

html{
  height:100%;
}
body{
  font-family:"Helvetica Neue",Helvetica, Arial, sans-serif;
  html[data-platform=ios] & {font-family:Helvetica,"Helvetica Neue", Arial, sans-serif;}
  background-color:backgroundColor;
  height:100%;
  padding:0px;
  margin:0;
  color:#555;
  // font-size:16px;

  >div{
    height:100%;
  }
}


.aek-page{
  position:absolute;
  width:100%;
  top:0;
  left:0;
  background-color:#fff;
  height:100%;
  overflow:hidden;
  box-sizing:border-box;
}

main.container
  height:100%;
  position:relative;
  // max-height:800px;
  margin:0 auto;
  overflow:hidden;

  >*
    @extend {aekscope} .aek-page
    overflow:auto;

.padding
  padding:verticalPadding horizontalPadding
  position:relative

.page
  background-color:#fff;

.panel{

  &,&.ui.basic.segment {
    position:absolute;
    width:100%;
    height:100%;
    top:0;
    left:0;
    // background-color:#fff;
    box-sizing:border-box;
    overflow:auto;

    [data-aek-is-animating=false] &, &.aek-transition-out, .aek-transition-out & {
      -webkit-overflow-scrolling: touch;
    }
    /* overflow scrolling causes flickering on animation
      hiding backface-visibility and enforcing 3dtranslate prevents the flicker */
    -webkit-backface-visibility: hidden;
    -webkit-transform: translate3d(0,0,0);

    margin:0;
  }

  .cbox-inner > * {
    &,&.ui.segment{
      margin-left:auto;
      margin-right:auto;
    }
  }


  .ui.basic.segment:first-child{
    // padding-top:1em; // removed this - not sure why its there
    >p:first-child{
      // margin-top:1em; // removed this - not sure why its there but it messes up panel layout
    }
  }
}

.ui.segment {
  >a,>button {
    margin-bottom:1em;
  }
  >p,>h1,>h2,>h3,>h4,h5{
    &:first-child{
      margin-top:0;
    }
  }
}


.loading.panel
  position: relative
  cursor: default
  point-events: none
  text-shadow: none !important
  color: transparent !important
  transition: all 0s linear

.loading.panel:before
  position: absolute
  content: ''
  top: 0%
  left: 0%
  background: loaderDimmerColor
  width: 100%
  height: 100%
  border-radius: borderRadius
  z-index: loaderDimmerZIndex

.loading.panel:after
  position: absolute
  content: ''
  top: 50%
  left: 50%
  margin: loaderMargin
  width: loaderSize
  height: loaderSize
  animation: panel-spin loaderSpeed linear
  animation-iteration-count: infinite
  border-radius: circularRadius
  border-color: loaderLineColor loaderFillColor loaderFillColor loaderFillColor
  border-style: solid
  border-width: loaderLineWidth
  box-shadow: 0px 0px 0px 1px transparent
  visibility: visible
  z-index: loaderLineZIndex

@keyframes panel-spin
  from
    transform: rotate(0deg)

  to
    transform: rotate(360deg)


.ellipsis
  ellipsis()

@media(min-width:590px) {
  main.container {
    max-width:570px;
  }
  .aek-page,main.container>*{
    border-top:30px solid backgroundColor;
    border-bottom:30px solid backgroundColor;
  }
}

.segment,.listview,.header{text-align:left;}
