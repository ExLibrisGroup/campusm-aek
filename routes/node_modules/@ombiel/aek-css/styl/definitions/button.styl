.ui.button.loading:disabled{
  opacity:1 !important;
}

.ui.button{
  font-weight:normal;
}

button.ui.button{
  vertical-align: top
}

.button.attached:not(.left):not(.right) {
  width:100%;
}

.ui.segment >button:last-child
  margin-bottom: 0 !important
 
// divided buttons styling
.ui.buttons.divided:not(.vertical) > .ui.button
  border-right:1px solid white;
  &:last-child
    border-right:none
.ui.buttons.divided.vertical > .ui.button
  border-bottom:1px solid white;
  &:last-child
    border-bottom:none

.ui.fluid.vertical.buttons, 
.ui.fluid.vertical.buttons > .button
  width: 100% !important;


.ui.labeled.icon.buttons > .button > .icon.loading, 
.ui.labeled.icon.button > .icon.loading
  background-color: transparent;

.ui.button.disabled.inverted
  background-color:transparent !important;

.ui.buttons 
  &.positive,&.negative,&.primary,&.secondary
    .ui.button.disabled:not(.inverted)
      color:invertedTextColor !important;
    
    &.positive .ui.button.disabled:not(.inverted)
      background-color:positiveColor !important;
    &.negative .ui.button.disabled:not(.inverted)
      background-color:negativeColor !important;
    &.primary .ui.button.disabled:not(.inverted)
      background-color:primaryColor !important;
    &.secondary .ui.button.disabled:not(.inverted)
      background-color:secondaryColor !important;
    
  for themeName,theme in themes
    &.{themeName} .ui.button.disabled:not(.inverted)
      color:invertedTextColor !important;
      background-color:theme['color'] !important;
    


.ui.button.disabled:not(.inverted)
  &,.ui.buttons &
    &.positive,&.negative,&.primary,&.secondary
      color:invertedTextColor !important;
    &.positive:not(.inverted)
      background-color:positiveColor !important;
    &.negative:not(.inverted)
      background-color:negativeColor !important;
    &.primary:not(.inverted)
      background-color:primaryColor !important;
    &.secondary:not(.inverted)
      background-color:secondaryColor !important;


for themeName,theme in themes
  .ui.{themeName}.buttons .active.button, .ui.{themeName}.buttons .active.button:active, .ui.{themeName}.active.button, .ui.{themeName}.button .active.button:active
    color: invertedTextColor

  .ui.{themeName}.disabled.button:not(.inverted)
    &,.ui.buttons &
      background-color: theme['color'] !important
      color: invertedTextColor !important
  
  .ui.{themeName}.disabled.button.inverted
    color:theme['light'] !important;

  .ui.{themeName}.buttons .button, .ui.{themeName}.button
    &,&.inverted:hover
      color: invertedTextColor