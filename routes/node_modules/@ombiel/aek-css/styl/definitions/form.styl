.aek-icon-select {
  button{
    border:none;
    background:none;
    text-align:center;
    outline:none;
    .icon{
      position:relative;
      margin:0 auto;
      text-align:center;
      border-radius:5px;
      
      background-color:#ccc;


      &::before{
        content:"";
        padding-top:100%;
        display:block;
      }

      svg{
        position:absolute;
        top:5%;
        left:5%;
        right:5%;
        bottom:5%;
        height:90%;
        width:90%;
        display:block;

        path{
          fill:rgba(0,0,0,0.5);
        }
      }
      .active-icon{
        width:30%;
        height:30%;
        svg{
          bottom:auto;
          top:auto;
          left:auto;
          right:auto;
          width:100%;
          height:130%;

          path{
            fill:#fff;
          }
        }
        position:absolute;
        bottom:15%;
        right:5%;

      }
    }
    .label{
      text-align:center;
      font-size:0.8em;
      line-height:1.3em;
      padding-top:.5em;
      color:#999;
    }

    &.active{
      .icon{
        background-color:#666;
      }
      .label{
        color:#000;
      }
    }

  }
}

// custom select box

select, .ui.form select {
  background: transparent;
  // border-radius: 0;
  -webkit-appearance: none;
}


// subselect

.subselect.listview.ui.menu {
  .item>a:after {
    content:"";
  }
  .item.active>a:after {
    content:"\f00c";
    color:positiveColor;
  }
}

.ui.header.banner.subselect > * {
  padding-top:0.5rem;
  padding-bottom:0.5rem;
}




