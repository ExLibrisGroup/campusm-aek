.ui{
  &.header,h1 {
    font-weight:200;
  }
}

.ui.banner.header {
  @extend {aekscope} .ui.block.header !optional
  @media(max-width:500px) {
    padding:0;
  }
  border:none;
  border-radius:0;
  display:table;
  width:100%;
  vertical-align:middle;
  line-height:1.33em;
  font-weight:100;
  margin:0;
  &,&>*{
    vertical-align:middle;
  }
  >*{
    display:table-cell;
    padding:1rem 1.33rem 1rem 1.33rem;
  }
  i.icon{
    font-size:1.33em;
    line-height:1em;
    height:1em;
    &:last-child{
      padding-left:0;
      padding-right:1rem;
    }
    &:first-child{
      padding-right:0;
    }
    opacity:0.75;
  }

  &.sub{
    >*{
      padding-top:0.5rem;
      padding-bottom:0.5rem;
    }
    i.icon + * {
      padding-left:0.5rem;
      padding-right:0.5rem;
    }
  }

  body &.raised{
    &,&.sub{
      background-color:#eee !important;
      font-weight:normal;
      box-shadow:0 0 5px rgba(0,0,0,0.2);
      z-index:1;
      border-bottom:1px solid rgba(0,0,0,0.09);
    }
  }
  & + * {
    &.ui.menu.flush , & .ui.menu.flush {
      >.item{
        padding-left:1.33em;
      }
    }
  }
}

h4.ui.header, h3.ui.header, .medium.ui.header, .small.ui.header
  font-weight: normal


// fix for managing img on right
.ui.header.right.aligned > .content
  vertical-align:middle

  &+img
    margin-left:iconMargin

.ui.header.right.aligned
  .sub.header
    text-align:right
  .icon
    display: inline-block
    vertical-align: top
    margin-left:iconMargin

.ui.header.center.aligned
  .sub.header
    text-align:center

.ui.header.attached
  &.inverted,&.banner
    margin-left:calc(0px - 1px);
    margin-right:calc(0px - 1px);
    width:calc(100% + 2px);


.ui.attached:not(.top):not(.bottom).header
  border-top: inherit;
  border-bottom: inherit;

// BANNER THEMES
for themeName,theme in themes
  .ui.{themeName}.header.banner
    background-color:theme['color']
    color:invertedTextColor !important
    .sub.header
      color: invertedTextColor !important
