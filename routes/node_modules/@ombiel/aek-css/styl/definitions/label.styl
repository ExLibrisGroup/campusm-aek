.ui.absolute.ribbon.label
  position:absolute
  z-index:1
  top:0
  left:(- ribbonTriangleSize)
  top:verticalPadding
  
  &.right
    left: auto
    right: 0;
    padding-right: calc( 1rem + 1.2em );
    padding-left: .8em;
    transform: none 
 
.ui[class*="right ribbon"].label
  padding-left: .8em

.ui.left.labeled.input input, 
.ui.left.labeled.input select
  padding-left: 2.5em !important
  

// apply positive and negative labels

.ui.positive.labels .label, .ui.positive.label
  background-color: green !important
  border-color: green !important
  color: invertedTextColor !important

.ui.labels positive.label:before, .ui.positive.labels .label:before, .ui.positive.label:before
  background-color: green !important

.ui.positive.labels .label:hover, .ui.positive.labels a.label:hover, a.ui.positive.label:hover
  background-color: green !important
  border-color: lighten(green,3) !important
  color: invertedTextColor !important

.ui.labels a.positive.label:hover:before, .ui.positive.labels a.label:hover:before, a.ui.positive.label:hover:before
  background-color: lighten(green,3) !important

.ui.positive.corner.label, .ui.positive.corner.label:hover
  background-color: transparent !important

.ui.positive.ribbon.label
  border-color: darken(green,15) !important
  



.ui.negative.labels .label, .ui.negative.label
  background-color: red !important
  border-color: red !important
  color: invertedTextColor !important

.ui.labels negative.label:before, .ui.negative.labels .label:before, .ui.negative.label:before
  background-color: red !important

.ui.negative.labels .label:hover, .ui.negative.labels a.label:hover, a.ui.negative.label:hover
  background-color: red !important
  border-color: lighten(red,3) !important
  color: invertedTextColor !important

.ui.labels a.negative.label:hover:before, .ui.negative.labels a.label:hover:before, a.ui.negative.label:hover:before
  background-color: lighten(red,3) !important

.ui.negative.corner.label, .ui.negative.corner.label:hover
  background-color: transparent !important

.ui.negative.ribbon.label
  border-color: darken(red,15) !important