ul.ui.menu
  padding:0

.ui.listview.menu.flush
  border-radius:0;
  box-shadow:none;
  font-size:fontSize
  margin-top:(- verticalPadding)
  margin-bottom:(- verticalPadding)
  margin-left:(- horizontalPadding)
  margin-right:(- horizontalPadding)


.ui.vertical.menu .dropdown.item>.dropdown.icon:before {
  content: "\f0da";
}

/* LISTVIEW */

//label style placeholder
$listviewLabel
  font-weight:normal;
  margin-left:0;
  margin-top:0;
  font-size: 0.8em;
  line-height:1.3em;
  border-radius:0.3em;
  overflow:hidden;
  max-width:33.3333333%
  float:left
  // padding:0.2em horizontalPadding

  margin-right:horizontalPadding
  margin-left:0

  &.positive
    background-color:positiveColor
    color:white

  &.negative
    background-color:negativeColor
    color:white

  &.warning
    background-color:warningColor
    color:white

  &.info
    background-color:infoColor
    color:white

  for themeName,theme in themes
    &.{themeName}:not(.basic)
      background-color:theme['color']

  i.icon
    display:inline;



$basicLabel
  border-style: solid
  border-color:rgba(0,0,0,0.2)
  border-width:1px
  background:none;
  color:inherit;

  &.positive
    color:positiveColor
    border-color:positiveBorderColor

  &.negative
    color:negativeColor
    border-color:negativeBorderColor

  &.warning
    color:warningColor
    border-color:warningBorderColor

  &.info
    color:infoColor
    border-color:infoBorderColor

  for themeName,theme in themes
    &.{themeName}
      color:theme['textColor']
      border-color:theme['textColor']



.ui.listview.menu
  @extend {aekscope} .ui.vertical.menu !optional
  @extend {aekscope} .ui.menu.fluid !optional
  width:auto !important;
  // overflow: hidden

  .item,a.item
    position: relative
    @extend {aekscope} .ui.vertical.menu .item !optional
    &.disabled > a
      @extend {aekscope} .ui.menu .item.disabled

    line-height:lineHeight

    &:before
      @extend {aekscope} .ui.vertical.menu .item:before !optional

    &:first-child:before
      @extend {aekscope} .ui.vertical.menu .item:first-child:before !optional

    &.active
      @extend {aekscope} .ui.vertical.menu .active.item !optional

    overflow:hidden;

    > .label,> a > .label

      @extend {aekscope} $listviewLabel


    >.detail,>a>.detail
      display: block
      overflow:hidden;
      margin:0;
      &:first-child{
        float:left
      }


  // Active Listview Items (hyperlinks)

  a.item,.item > a
    line-height:lineHeight
    padding: verticalPadding (horizontalPadding + 1em) verticalPadding horizontalPadding

    // add chevron
    &:after
      opacity:0.5;
      bottom: 0
      content: "\f054"
      font-family: 'Icons'
      left: auto
      margin: auto
      position: absolute
      right: horizontalPadding
      top: 0
      width: 1em;
      height: 1em;
      text-align:right;

    >.label
      @extend {aekscope} .ui.menu .item > .label

  // if item wraps an <a> element, assume that this should cover the whole item area
  // used for <ul><li><a/></li></ul> structures
  .item > a:first-child:last-child
    display:block;
    margin: (- verticalPadding) (- horizontalPadding)
    &:hover
      @extend {aekscope} .ui.menu > a.item:hover !optional

  // you can explicilty remove the chevron
  .item.no-chevron > a
    padding-right:horizontalPadding
    &:after
      display:none;






  &.basic.labeled >.item >.label, &.basic.labeled >a.item >.label , &.basic.labeled >.item >a >.label , >.item >.label.basic, >a.item >.label.basic , >.item >a >.label.basic
    @extend {aekscope} $basicLabel
    border-radius:0
    border-width:0 1px 0 0
    padding-left:0;


  &.uniform >.item
    &,&>a>
      .label
        &,&:first-child
          width:25%;
          max-width:none;
          > .label
            width:auto;
            float:none;
            display:block
      .thumbnail>.label
        &,&:first-child
          width:5%;


  &.right.labeled > .item , & >.item.right.labeled

    & > a:last-child
      max-width:none;
      text-align:inherit;


    &,&>a
      float:none;
      display:block;
      width:auto;
      >*
        display:table
        width:100%;
        >*
          display:table-cell
          vertical-align:middle
          >.label
            @extend {aekscope} .ui.menu .item > .label
            @extend {aekscope} $listviewLabel
            &.basic
              @extend {aekscope} $basicLabel
            width:auto;
            margin-right:0;
            margin-left:horizontalPadding;
            display:inline;
            float:right;
            ellipsis();
            max-width:none;
        // &:last-child
        //   text-align:right;
        //   max-width:25%; // doesn't seem to work
    &>a >* >* >.label
      margin-right:0.5em;


/* STACKED LISTVIEW */

stackedItem()

  >.label
    clear:both;
    margin-bottom:verticalPadding
    max-width:none;
  >.detail
    clear:both;

stackedBasicLabel()

  border-width:1px;
  border-radius:.3em;
  padding-left:horizontalPadding

$stackedBasicLabel
  stackedBasicLabel()


.ui.stacked.listview.menu
  > .item
    & , & > a
      stackedItem()
    & , & > a
      >.label.basic
        @extend {aekscope} $stackedBasicLabel !optional

  &.basic.labeled
    > .item
      & , & > a
        >.label
          @extend {aekscope} $stackedBasicLabel !optional



@media(max-width:360px)
  .ui.stackable.listview.menu > .item
    stackedItem()

  .ui.stackable.listview.menu
    > .item
      stackedItem()
      & , & > a
        >.label.basic
          stackedBasicLabel()

    &.basic.labeled
      > .item
        & , & > a
          >.label
            stackedBasicLabel()


/* FORMATTED LISTVIEW */

.ui.formatted.listview.menu
  h1,h2,h3,h4,h5,h6,p
    margin:0;
    line-height:lineHeight;
    &.small
      font-size:0.8em
    &.large
      font-size:1.4em
  h1
    line-height:(1/1.5)*lineHeight
    margin-bottom: 0.1em;
  h2
    line-height:(1/1.5)*lineHeight
    margin-bottom:0.15em;
  h3
    line-height:(1.15/1.5)*lineHeight
    margin-bottom:0.1em
  h4
    line-height:(1.15/1.5)*lineHeight
    margin-bottom:0.15em
  h5
    line-height:(1.3/1.5)*lineHeight
    margin-bottom:0.15em


/* THUMBNAILS */

thumbBaseSize = textLineHeight
if not unit(thumbBaseSize)
  thumbBaseSize = unit(thumbBaseSize,em)

$sizedThumb
  >*:first-child
    line-height:1em;
    >img,>aek-img
      background-size:cover
  &.contained
    >*:first-child
      >img,>aek-img
        background-size:contain

thumbSize(size)
  @extend $sizedThumb !optional
  >*:first-child , >.label:first-child + *
    &:not(.label)
      width:size
      >img,>aek-img
        height:size
        width:size
      &.icon
        font-size:size
        width:1em
        line-height:1em;
        height:1em;
        vertical-align:top
        &:before
          vertical-align:top
          font-size:0.7em
          width:(1em/0.7em)
          height:(1em/0.7em)
          display:block;

  >.label:first-child + *
    &:not(.label)
      &.icon
        vertical-align:middle


  &.rounded
    >*:first-child
      >img,>aek-img
        border-radius:10%;
  // &.bordered
  //     >*:first-child
  //       >img
  //         box-shadow:boxShadow

.ui.listview.menu > .item
  >a:first-child:last-child:hover // override obscure rule inherited from semantic
    color:inherit;
  &.active,&.active>a
    color:inherit;
  &,&>a
    >.thumbnail

      display:table

      &.right.labeled
        width:100%
      >*
        display:table-cell
        vertical-align:middle
        padding-left:horizontalPadding

      >*:first-child
        padding-left:0
        vertical-align:top;
        >img,>aek-img
          // max-width:100%
          display:block
        >aek-img
          background-position:center;
          background-repeat:no-repeat;

        &:not(.label) + *
          width:100%

        &.label + * + *
          width:100%

      >*.label
        vertical-align:middle;
        >*
          @extend {aekscope} .ui.menu .item > .label
          @extend {aekscope} $listviewLabel

          &.basic
            @extend {aekscope} $basicLabel

          max-width:none;

        &:first-child + *
          padding-left:0;

        &:last-child
          text-align:right;
          >*
            margin-right:0;
            white-space:nowrap;


      &.bordered
        >*:first-child
          >img,>aek-img
            box-shadow:boxShadow

      &.rounded
        >*:first-child
          >img,>aek-img
            border-radius:0.5em

      &.mini
        thumbSize(thumbBaseSize)

      &.tiny
        thumbSize(thumbBaseSize * 1.5)

      &.small
        thumbSize(thumbBaseSize * 2)

      &.medium
        thumbSize(thumbBaseSize * 2.5)

      &.large
        thumbSize(thumbBaseSize * 3)

      &.big
        thumbSize(thumbBaseSize * 4)

      &.huge
        thumbSize(thumbBaseSize * 5)

      &.thumb-label
        width:100%;
        >*
          width:auto;
        >*:first-child
          width:25%;
          img
            max-width:100%;
            margin:0 auto;




  &>a >.thumbnail >*.label:last-child > *
    margin-right:0.5em;

.ui.listview.inverted
  font-weight:200
  h1,h2,h3,h4,h5
    font-weight:normal
