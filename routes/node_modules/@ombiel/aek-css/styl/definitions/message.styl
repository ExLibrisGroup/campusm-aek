.ui.message{
  a{
    color:inherit;
    font-weight:bold;
    text-decoration:underline;
  }
}

.ui.visible.message {
  display:block !important;
  &.icon {
    display:table !important;
  }
}

.ui.icon.message > .icon{
  padding: 0 0 0 1px
}

// styling for close button on dismissible message in AEK React
.ui.message > .content > a.close , .ui.message > a.close
  @extend {aekscope} .ui.message > .close.icon
  >i.close.icon
    margin:0;
  text-decoration:none;
  line-height:1em;

// stack icon on top of message for mobile
@media(max-width:370px) {
  .ui.icon.message > .icon{
    display:table-row;
    padding-top:0.1em;
    padding-bottom:1rem;
  }
  .ui.icon.message > .content{
    display:table-row;
  }
}