.ui.table tbody th
  @extend .ui.table td
  @extend .ui.table tr td
  @extend .ui.table thead th
  border-bottom:none;

.ui.table tbody tr > th:first-child
  @extend .ui.table thead tr > th:first-child

.ui.table tbody tr:first-child > th:first-child
  @extend .ui.table thead tr:first-child > th:first-child

.ui.table tbody tr:first-child > th:last-child
  @extend .ui.table thead tr:first-child > th:last-child

.ui.table tbody tr:first-child > th:only-child
  @extend.ui.table thead tr:first-child > th:only-child

/* Table Row */
.ui.table tr th
  @extend .ui.table tr td

.ui.table tr:first-child th
  @extend .ui.table tr:first-child td


.ui.compact.table th
  padding: compactVerticalPadding compactHorizontalPadding

.ui.very.compact.table th
  padding: veryCompactVerticalPadding veryCompactHorizontalPadding

.table-segment .ui.table
  border:none;


/*******************************
             Types
*******************************/
/*--------------
    Complex
---------------*/

.ui.structured.table tbody th
  @extend .ui.structured.table thead th

.ui.structured.sortable.table tbody th
  @extend .ui.structured.sortable.table thead th


/*--------------
   Definition
---------------*/
.ui.definition.table tbody:not(.full-width) th:first-child
  @extend .ui.definition.table thead:not(.full-width) th:first-child


/* Remove Border */
.ui.celled.definition.table tbody:not(.full-width) th:first-child
  @extend .ui.celled.definition.table thead:not(.full-width) th:first-child


/* Highlight Defining Column */
.ui.definition.table tr th:first-child
  @extend .ui.definition.table tr td:first-child



@media only screen and (max-width:largestMobileScreen)
  .ui.table:not(.unstackable) tbody > tr > th:first-child:last-child
    background: headerBackground
